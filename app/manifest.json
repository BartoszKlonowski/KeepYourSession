{
  "manifest_version": 2,
  "name": "SessionStorage",
  "version": "0.1.0",

  "permissions": [
    "activeTab",
    "sessions",
    "tabs",
    "unlimitedStorage",
		"contextMenus",
		"storage",
		"notifications",
		"search"
  ],

  "background": {
    "scripts": ["src/engine/Background.js"]
  },

  "icons": {
    "600": "icons/SessionStorageIcon.png"
  },

  "description": "Let's user keep his sessions for future restoration",

  "browser_action": {
    "default_icon": "icons/SessionStorageIcon.png",
    "default_title": "SessionStorage",
    "default_popup": "src/popup/MainPopup.html"
  }
}
